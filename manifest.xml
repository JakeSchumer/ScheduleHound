<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">

  <!-- ═══════════════════════════════════════════════════
       BASIC IDENTITY
       ═══════════════════════════════════════════════════ -->
  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>ScheduleHound</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="ScheduleHound" />
  <Description DefaultValue="Extract court deadlines from PDF documents and add them to your Outlook calendar using AI." />
  <IconUrl DefaultValue="https://jakeschumer.github.io/ScheduleHound/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://jakeschumer.github.io/ScheduleHound/assets/icon-128.png" />
  <SupportUrl DefaultValue="https://github.com/your-repo/schedulehound" />

  <!-- ═══════════════════════════════════════════════════
       PERMISSIONS & REQUIREMENTS
       ═══════════════════════════════════════════════════ -->
  <Permissions>ReadWriteMailbox</Permissions>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <!-- ═══════════════════════════════════════════════════
       FORM SETTINGS (legacy — required for manifest)
       ═══════════════════════════════════════════════════ -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://jakeschumer.github.io/ScheduleHound/taskpane.html" />
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://jakeschumer.github.io/ScheduleHound/taskpane.html" />
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- ═══════════════════════════════════════════════════
       RULE — Show add-in for ALL items (always available)
       ═══════════════════════════════════════════════════ -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Edit" />
  </Rule>

  <!-- ═══════════════════════════════════════════════════
       VERSION OVERRIDES (Modern UI — Ribbon button + Task Pane)
       ═══════════════════════════════════════════════════ -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <!-- ── Ribbon Extension Point ── -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ScheduleHoundGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="BtnLabel" />
                  <Supertip>
                    <Title resid="BtnLabel" />
                    <Description resid="BtnDesc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16" />
                    <bt:Image size="32" resid="Icon32" />
                    <bt:Image size="80" resid="Icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskpaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- ── Also available from Appointment view ── -->
          <ExtensionPoint xsi:type="AppointmentOrganizerCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ScheduleHoundGroupCal">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="TaskpaneButtonCal">
                  <Label resid="BtnLabel" />
                  <Supertip>
                    <Title resid="BtnLabel" />
                    <Description resid="BtnDesc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16" />
                    <bt:Image size="32" resid="Icon32" />
                    <bt:Image size="80" resid="Icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskpaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- ── Resources ── -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://jakeschumer.github.io/ScheduleHound/assets/icon-16.png" />
        <bt:Image id="Icon32" DefaultValue="hhttps://jakeschumer.github.io/ScheduleHound/assets/icon-32.png" />
        <bt:Image id="Icon80" DefaultValue="https://jakeschumer.github.io/ScheduleHound/assets/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="TaskpaneUrl" DefaultValue="https://jakeschumer.github.io/ScheduleHound/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="ScheduleHound" />
        <bt:String id="BtnLabel" DefaultValue="ScheduleHound" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="BtnDesc" DefaultValue="Extract court deadlines from PDFs and add them to your calendar." />
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>
